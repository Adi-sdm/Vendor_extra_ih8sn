     name: "vendor.lineage.touch@1.0-service.samsung",
     init_rc: ["vendor.lineage.touch@1.0-service.samsung.rc"],
+    vintf_fragments: ["vendor.lineage.touch@1.0-service.samsung.xml"],
     defaults: ["touch_samsung_defaults"],
     proprietary: true,
 }
diff --git a/hidl/touch/lineage.touch@1.0-service.samsung.xml b/hidl/touch/lineage.touch@1.0-service.samsung.xml
new file mode 100644
